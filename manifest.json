{
  "manifest_version": 2,
  "name": "epoch_translator",

  "description": "it displays an understandable date when a epoch is hovered over",
  "version": "1.1.1",

  "permissions": [
    "contextMenus",
    "tabs"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },

  "icons": {
    "128": "icon512.png"
  }

}
